<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WheelView">
        <!--设置顶部和顶部阴影-->
        <attr name="wv_drawShadows" format="boolean"/>
        <attr name="wv_shadowsColorStart" format="color"/>
        <attr name="wv_shadowsColorCenter" format="color"/>
        <attr name="wv_shadowsColorEnd" format="color"/>
        <!--选择背景和最基础背景-->
        <attr name="wv_wheelBackground" format="reference"/>
        <attr name="wv_wheelSelectBackground" format="reference"/>
        <!--文字颜色-->
        <attr name="wv_textDefaultColor" format="color"/>
        <attr name="wv_textSelectColor" format="color"/>
        <attr name="wv_textSize" format="dimension"/>
        <!--是否循环-->
        <attr name="wv_cycle" format="boolean"/>
        <!-- 显示个数-->
        <attr name="wv_visibleItems" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CharacterPickerView">
        <!--设置顶部和顶部阴影-->
        <attr name="cp_drawShadows" format="boolean"/>
        <attr name="cp_shadowsColorStart" format="color"/>
        <attr name="cp_shadowsColorCenter" format="color"/>
        <attr name="cp_shadowsColorEnd" format="color"/>
        <!--选择背景和最基础背景-->
        <attr name="cp_wheelBackground" format="reference"/>
        <attr name="cp_wheelSelectBackground" format="reference"/>
        <!--文字颜色-->
        <attr name="cp_textDefaultColor" format="color"/>
        <attr name="cp_textSelectColor" format="color"/>
        <attr name="cp_textSize" format="dimension"/>
        <!--按钮相关-->
        <attr name="cp_cancelTextColor" format="reference"/>
        <attr name="cp_cancelText" format="string|reference"/>
        <attr name="cp_confirmTextColor" format="reference"/>
        <attr name="cp_confirmText" format="string|reference"/>
        <!--是否循环-->
        <attr name="cp_cycle" format="boolean"/>
        <!--列表个数-->
        <attr name="cp_listCount" format="integer"/>
        <!-- 显示个数-->
        <attr name="cp_visibleItems" format="integer"/>
    </declare-styleable>


    <declare-styleable name="WheelView2">
        <attr name="wv2_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="wv2_textSize" format="dimension"/>
        <attr name="wv2_textColorOut" format="color"/>
        <attr name="wv2_textColorCenter" format="color"/>
        <attr name="wv2_dividerColor" format="color"/>
        <!--是否循环-->
        <attr name="wv2_cycle" format="boolean"/>
        <!-- 显示个数-->
        <attr name="wv2_visibleItems" format="integer"/>
    </declare-styleable>

    <declare-styleable name="IOSCharacterPickerView">

        <!--按钮相关-->
        <attr name="icp_cancelTextColor" format="reference"/>
        <attr name="icp_cancelText" format="string|reference"/>
        <attr name="icp_confirmTextColor" format="reference"/>
        <attr name="icp_confirmText" format="string|reference"/>
        <!--列表个数-->
        <attr name="icp_listCount" format="integer"/>

        <attr name="icp_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="icp_textSize" format="dimension"/>
        <attr name="icp_textColorOut" format="color"/>
        <attr name="icp_textColorCenter" format="color"/>
        <attr name="icp_dividerColor" format="color"/>
        <attr name="icp_wheelBackground" format="reference"/>
        <!--是否循环-->
        <attr name="icp_cycle" format="boolean"/>
        <!-- 显示个数-->
        <attr name="icp_visibleItems" format="integer"/>

    </declare-styleable>

</resources>